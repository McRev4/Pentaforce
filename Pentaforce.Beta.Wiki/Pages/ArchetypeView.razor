@using Pentaforce.Beta.Wiki.ViewModels

@page "/class"

<div class="container mt-3">
    <div class="row mb-3">
        <div class="col">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <button type="button" class="nav-link @(Archetype == ArchetypeType.Fighter ? "active" : string.Empty)" @onclick="ShowFighter">Воїн</button>
                </li>
                <li class="nav-item">
                    <button type="button" class="nav-link @(Archetype == ArchetypeType.Spellblade ? "active" : string.Empty)" @onclick="ShowSpellblade">Відьмак</button>
                </li>
            </ul>
        </div>
    </div>
    <ClassView Archetype="Archetype"></ClassView>
</div>

@code {
    private ArchetypeType Archetype { get; set; } = ArchetypeType.Fighter;

    private void ShowFighter() => Archetype = ArchetypeType.Fighter;

    private void ShowSpellblade() => Archetype = ArchetypeType.Spellblade;
}
